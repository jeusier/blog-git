extends layout
block append content
  div.centered.centered_margin
    h1.blog-header Create Post
    form(role="form" id='create' action='/blogs' method='post')
      div.form-group
        label(for="title") Title: 
        input(class="form-control" type="text" id="title" name="title" placeholder="Enter Title")
      div.form-group
        label(for="body") Body: 
        textarea(class="form-control" name="body" id="body" rows=20 placeholder="Enter Body Text")
      button(type="submit" class="btn btn-default") Create Post
    #result